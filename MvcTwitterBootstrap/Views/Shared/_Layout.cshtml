<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="navbar navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container-fluid">
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>
                        <a class="brand" href="#">Your logo here</a>
                        @Html.Partial("_LoginPartial")
                        <div class="nav-collapse">
                            <ul class="nav">
                                <li id="homeTab">@Html.ActionLink("Home", "Index", "Home")</li>
                                <li id="aboutTab">@Html.ActionLink("About", "About", "Home")</li>
                                <li id="contactTab">@Html.ActionLink("Contact", "Contact", "Home")</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <div id="body">
            <div class="container">
                @RenderSection("featured", required: false)
                <section class="content-wrapper main-content clear-fix">
                    @RenderBody()
                </section>
            </div>
        </div>
        <footer>
            <div class="navbar navbar-fixed-bottom">
                <div class="navbar-inner">
                	<div class="container-fluid">
                        <ul class="nav">
                        	<li><p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>

        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/application")

        <script>
            @if (!string.IsNullOrWhiteSpace(ViewBag.ActiveTab)) {
                @:activeTab = '@ViewBag.ActiveTab';
            }
        </script>
        @RenderSection("scripts", required: false)
    </body>
</html>
